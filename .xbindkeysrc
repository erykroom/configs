#play/pause
"mpc toggle"
   Control+Alt + Down

#play/pause (XF86)
"mpc toggle"
   XF86AudioPlay

#stop
"mpc stop"
   Control+Alt + Up

#forward
"mpc next"
   Control+Alt + Right

#forward (XF86)
"mpc next"
   XF86AudioNext

#previous
"mpc prev"
   Control+Alt + Left

#previous (XF86)
"mpc prev"
   XF86AudioPrev

#htop
"urxvtc -e htop"
   Control+Alt + Delete

#rewind
"mpc seek -00:00:01"
   Shift + Left

#fast_forward
"mpc seek +00:00:01"
   Shift + Right

