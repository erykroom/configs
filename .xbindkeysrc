
#increase brightness
"xbacklight -inc 10"
   m:0x0 + c:233
   XF86MonBrightnessUp

#decrease brightness
"xbacklight -dec 10"
   m:0x0 + c:232
   XF86MonBrightnessDown
    
#increase volume
"amixer -D pulse sset Master 5%+"
   m:0x0 + c:123
   XF86AudioRaiseVolume


#decrase volume
"amixer -D pulse sset Master 5%-"
   m:0x0 + c:122
   XF86AudioLowerVolume

   
# Toggle mute
"amixer -D pulse sset Master toggle"
   m:0x0 + c:121
   XF86AudioMute

